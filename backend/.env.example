# 服务器配置
NODE_ENV=development
PORT=3001
HOST=localhost

# 数据库配置
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://username:password@localhost:5432/ssalgten"

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-environment
JWT_EXPIRES_IN=24h

# API 安全配置
API_KEY_SECRET=your-api-key-secret-for-agents-change-this
CORS_ORIGIN=http://localhost:3000

# 探针配置
DEFAULT_AGENT_API_KEY=default-agent-api-key-change-this-in-production
