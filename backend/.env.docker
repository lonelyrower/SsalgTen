# Docker Backend Environment Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database will be set by Docker Compose
# DATABASE_URL is set via environment variable in docker-compose.yml

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API Security
API_KEY_SECRET=your-api-key-secret-change-this
CORS_ORIGIN=http://localhost

# Agent Configuration
DEFAULT_AGENT_API_KEY=default-agent-key-change-this
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_TIMEOUT=10000
# Optional: Agent request signature
AGENT_REQUIRE_SIGNATURE=true
AGENT_SIGNATURE_TTL_SECONDS=300

# Logging
LOG_LEVEL=info
ENABLE_MORGAN=true

# Refresh token lifetime (days)
REFRESH_TOKEN_EXPIRES_IN_DAYS=30

# External Services
SPEEDTEST_SERVER_ID=auto
DEFAULT_PING_COUNT=4
DEFAULT_TRACEROUTE_MAX_HOPS=30
