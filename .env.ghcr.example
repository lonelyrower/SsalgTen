# GitHub Container Registry Configuration
# 复制此文件为 .env.ghcr 并修改相应的值

# 镜像标签 (latest, main, v1.0.0, etc.)
IMAGE_TAG=latest

# 基础配置
DOMAIN=localhost
FRONTEND_PORT=3000
BACKEND_PORT=3001
DB_PORT=5432

# 数据库配置
DB_PASSWORD=your_secure_password_here

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API安全配置
API_KEY_SECRET=your-api-key-secret-change-this
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Agent配置
DEFAULT_AGENT_API_KEY=default-agent-key-change-this
AGENT_API_KEY=your-agent-api-key-here
AGENT_NAME=production-agent
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_REQUIRE_SIGNATURE=false

# 外部服务
IPINFO_TOKEN=your_ipinfo_token_here

# Updater配置
UPDATE_INTERVAL=300000

# 前端构建变量
VITE_API_URL=/api
VITE_NODE_ENV=production
VITE_ENABLE_DEBUG=false

# 日志配置
LOG_LEVEL=info
ENABLE_MORGAN=true