# GitHub Container Registry Configuration
# 复制此文件为 .env.ghcr 并修改相应的值

# 镜像标签 (latest, main, v1.0.0, etc.)
IMAGE_TAG=latest

# 基础配置
DOMAIN=localhost
FRONTEND_PORT=3000
BACKEND_PORT=3001
DB_PORT=5432

# 数据库配置
DB_PASSWORD=your_secure_password_here

# JWT配置
JWT_SECRET=CHANGE_ME_generate_a_secure_jwt_secret
JWT_EXPIRES_IN=7d

# API安全配置
API_KEY_SECRET=CHANGE_ME_generate_a_secure_api_key_secret
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Agent配置
# IMPORTANT: Use a strong random key and keep it consistent between backend and all agents.
DEFAULT_AGENT_API_KEY=CHANGE_ME_generate_a_secure_agent_key
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_REQUIRE_SIGNATURE=false

# 外部服务
IPINFO_TOKEN=your_ipinfo_token_here

# Updater配置
UPDATE_INTERVAL=300000

# 前端构建变量
# Frontend will use this as runtime-injected base URL
VITE_API_BASE_URL=/api
VITE_NODE_ENV=production
VITE_ENABLE_DEBUG=false

# 日志配置
LOG_LEVEL=info
ENABLE_MORGAN=true
