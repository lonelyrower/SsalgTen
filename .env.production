# SsalgTen Production Configuration
# ============================================

# 基础配置
NODE_ENV=production
COMPOSE_PROJECT_NAME=ssalgten

# 端口配置
FRONTEND_PORT=80
BACKEND_PORT=3001
DB_PORT=5432
REDIS_PORT=6379

# 域名配置（替换为你的域名）
DOMAIN=your-domain.com
CORS_ORIGIN=http://your-domain.com

# 数据库配置（生产环境用PostgreSQL）
DB_PASSWORD=your-strong-postgres-password-here
DATABASE_URL=postgresql://ssalgten:your-strong-postgres-password-here@database:5432/ssalgten

# Redis配置
REDIS_PASSWORD=your-strong-redis-password-here

# JWT安全配置（必须更改！）
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this
JWT_EXPIRES_IN=7d

# API安全配置（必须更改！）
API_KEY_SECRET=your-api-key-secret-for-agent-authentication-change-this

# Agent配置
DEFAULT_AGENT_API_KEY=default-agent-key-change-this-immediately
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_TIMEOUT=10000

# 系统配置
LOG_LEVEL=info
ENABLE_MORGAN=false

# 网络诊断配置
SPEEDTEST_SERVER_ID=auto
DEFAULT_PING_COUNT=4
DEFAULT_TRACEROUTE_MAX_HOPS=30

# Frontend构建环境变量
VITE_API_BASE_URL=http://your-domain.com:3001/api
VITE_APP_NAME=SsalgTen Network Monitor
VITE_APP_VERSION=1.0.0
VITE_ENABLE_DEBUG=false
VITE_MAP_PROVIDER=openstreetmap

# 示例Agent节点配置（New York）
AGENT_NYC_ID=agent-nyc-production
AGENT_NYC_API_KEY=nyc-agent-api-key-change-this
AGENT_NYC_NAME=New York Production Node
AGENT_NYC_COUNTRY=United States
AGENT_NYC_CITY=New York
AGENT_NYC_PROVIDER=VPS Provider
AGENT_NYC_LATITUDE=40.7128
AGENT_NYC_LONGITUDE=-74.0060
AGENT_NYC_PORT=3002

# 监控配置
HEARTBEAT_INTERVAL=30000
MAX_CONCURRENT_TESTS=5
PING_COUNT=4
TRACEROUTE_MAX_HOPS=30
MTR_COUNT=10